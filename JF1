pipeline {
    agent any
    parameters {
        string {name: 'USERNAME', defaultValuue: 'Izhan', description: 'Enter your name'}
        choices {name: 'GREETINGS', choices: 'Hi' ,'Hello','Hey' , description: 'Choose a greeting'}
    }
    environment {
        Dir_Name = "GreetingsDir"
    }
    stages{
        stage('Greet'){
            steps {
                echo "${params.GREETINGS} from ${params.USERNAME}"  # This will print the greeting message using parameters hello from izhan
            }
        }
    }
    stages{
        stage('Make Directory'){
            steps {
                echo "${params.USERNAME} is creating a directory named ${Dir_Name}"     # This will print the message indicating the directory creation by izhan or specified user in string parameter.
            } sh  "mkdir -p ${Dir_Name}"           # This will create a directory named GreetingsDir}
        }
    }
     
     stages{
        stage('Read from a file' ) {
            steps {
                echo "${params.GREETINGS} from the best user ${param.Username} > ${Dir_Name}/Greetings.txt"     # This will print the message indicating the directory creation by izhan or specified user in string parameter.
                sh "cat ${Dir_Name}/Greetings.txt" # This will read the contents of the Greetings.txt file in the GreetingsDir directory.}"    
            } 
        }
    }
}
